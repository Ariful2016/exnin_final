<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/courseName_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/first_installment_txt"
            app:layout_constraintBottom_toBottomOf="@id/first_installment_bdt"
            android:text="Arabic Shikkha"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"
            />
        <TextView
            android:id="@+id/first_installment_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="1st installment"
            android:textSize="20dp"
            android:textColor="#353535"
            android:fontFamily="@font/roboto"
            />
        <TextView
            android:id="@+id/first_installment_bdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/first_installment_txt"
            app:layout_constraintTop_toBottomOf="@id/first_installment_txt"
            android:text="2800 bdt"
            android:textSize="20dp"
            android:textColor="#353535"
            android:fontFamily="@font/roboto"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>