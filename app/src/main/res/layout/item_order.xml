<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4FAFA">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kid's English"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="16sp"
                android:padding="3dp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/course_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee : 3800"
                app:layout_constraintStart_toEndOf="@id/course_name"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:padding="4dp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/course_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day: MON-WED"
                app:layout_constraintStart_toEndOf="@id/course_fee"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:padding="4dp"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/course_status"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Running"
                android:background="@drawable/btn_back2"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/course_day"
                app:layout_constraintBottom_toBottomOf="@id/joining_date"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:padding="4dp"
                android:layout_marginRight="3dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/course_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: 06:30 PM"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/course_name"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/joining_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joining Date: 01 Aug, 22"
                app:layout_constraintStart_toEndOf="@id/course_time"
                app:layout_constraintTop_toBottomOf="@id/course_name"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/roboto"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#D6E4DD"
            android:padding="5dp"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/top_lay">

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Installments"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/txt_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_3"
                android:text="Pay Date"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/txt_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/txt_4"
                android:text="Status"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Action"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingRight="15dp"
                android:fontFamily="@font/roboto"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintTop_toBottomOf="@id/txt_1"/>
            <TextView
                android:id="@+id/inst_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_1"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintEnd_toEndOf="@id/txt_1"
                app:layout_constraintBottom_toBottomOf="@id/status_1"
                android:text="2300"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/pay_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_2"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintEnd_toEndOf="@id/txt_2"
                app:layout_constraintBottom_toBottomOf="@id/status_1"
                android:text="01 Aug, 22"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/status_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_3"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintEnd_toEndOf="@id/txt_3"
                android:text="Paid"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:background="@drawable/btn_back2"
                android:textColor="@color/white"
                android:textSize="16sp"
               android:layout_margin="5dp"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_4"
                app:layout_constraintTop_toBottomOf="@id/divider_1"
                app:layout_constraintEnd_toEndOf="@id/txt_4"
                android:text="Pay Now"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:paddingRight="3dp"
                android:background="@drawable/btn_back2"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/status_1"/>
            <TextView
                android:id="@+id/inst_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_1"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintEnd_toEndOf="@id/txt_1"
                app:layout_constraintBottom_toBottomOf="@id/status_2"
                android:text="2200"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/pay_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_2"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintEnd_toEndOf="@id/txt_2"
                app:layout_constraintBottom_toBottomOf="@id/status_2"
                android:text="01 Aug, 22"
                android:textColor="#333333"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/status_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_3"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintEnd_toEndOf="@id/txt_3"
                android:text="Unpaid"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:background="@drawable/btn_back2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_4"
                app:layout_constraintTop_toBottomOf="@id/divider_2"
                app:layout_constraintEnd_toEndOf="@id/txt_4"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="invisible"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:paddingRight="3dp"
                android:background="@drawable/btn_back2"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>
            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/status_2"/>
            <TextView
                android:id="@+id/inst_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_1"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintEnd_toEndOf="@id/txt_1"
                app:layout_constraintBottom_toBottomOf="@id/status_3"
                android:text="2200"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                android:fontFamily="@font/roboto"/>
            <TextView
                android:id="@+id/pay_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/txt_2"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintEnd_toEndOf="@id/txt_2"
                app:layout_constraintBottom_toBottomOf="@id/status_3"
                android:text="01 Aug, 22"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/status_3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_3"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintEnd_toEndOf="@id/txt_3"
                android:text="Unpaid"
                android:textAllCaps="false"
                android:includeFontPadding="false"
                android:background="@drawable/btn_back2"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:fontFamily="@font/roboto"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/action_3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="@id/txt_4"
                app:layout_constraintTop_toBottomOf="@id/divider_3"
                app:layout_constraintEnd_toEndOf="@id/txt_4"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_margin="5dp"
                android:textAllCaps="false"
                android:paddingRight="3dp"
                android:visibility="gone"
                android:background="@drawable/btn_back2"
                android:includeFontPadding="false"
                android:fontFamily="@font/roboto"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>